<%- model_class = Produto -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:nome) %>:</strong></dt>
  <dd><%= @produto.nome %></dd>
  <dt><strong><%= model_class.human_attribute_name(:preco) %>:</strong></dt>
  <dd><%= @produto.preco %></dd>
  <dt><strong><%= model_class.human_attribute_name(:parcelas) %>:</strong></dt>
  <dd><%= @produto.parcelas %></dd>
  <dt><strong><%= model_class.human_attribute_name(:imagem) %>:</strong></dt>
  <dd><%= @produto.imagem %></dd>
  <dt><strong><%= model_class.human_attribute_name(:url) %>:</strong></dt>
  <dd><%= @produto.url %></dd>
  <dt><strong><%= model_class.human_attribute_name(:loja_id) %>:</strong></dt>
  <dd><%= @produto.loja_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:user_id) %>:</strong></dt>
  <dd><%= @produto.user_id %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              produtos_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_produto_path(@produto), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              produto_path(@produto),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
